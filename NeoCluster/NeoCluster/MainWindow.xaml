<Window x:Class="NeoCluster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeoCluster"
        mc:Ignorable="d"
        Title="NeoCluster" Height="183" Width="417">
    <Grid>
        <TextBlock x:Name="lblGear" Text="N" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"></TextBlock>
        <Button x:Name="btnDebug" Content="Start" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Height="24" Width="52" Click="btnDebug_Click"/>
        <ProgressBar x:Name="prgRpm" Margin="0,136,0,0"></ProgressBar>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock x:Name="lblSpeed" Text="000" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="105" FontSize="72"/>
            <TextBlock x:Name="lblKm" Text="km/h" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" FontSize="36"/>
        </StackPanel>
    </Grid>
</Window>
